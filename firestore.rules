
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if the user is authenticated.
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return request.auth.token.email == 'admin@akm.com';
    }
    
    // Helper function to check if the user is the owner of the document.
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Only admins can write to the configuration
    match /config/siteMapping {
       allow read: if isAuthenticated();
       allow write: if isAdmin();
    }

    // Functions can write metadata, authenticated clients can read
    match /uploadsMeta/{docId} {
        allow read: if isAuthenticated();
        allow write: if isAdmin(); // Only backend processes can write metadata
    }
    
    // Functions can write logs, authenticated clients can read
     match /submissionLogs/{logId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin(); // Only backend processes can write logs
    }

    // Users can submit access requests, but only admins can read/update/delete them.
    match /accessRequests/{docId} {
      allow create: if true; // Anyone can create a request
      allow read, update, delete: if isAdmin();
    }

    // Users can update their own presence, but only admins can read the full list.
    match /userPresence/{userId} {
      allow read, write: if isOwner(userId);
      allow list: if isAdmin();
    }

    // Deny all other reads and writes by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
